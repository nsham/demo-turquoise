<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Image Tile Component"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/tabs"
            type="nav"/>
        <items jcr:primaryType="nt:unstructured">
            <basic
                jcr:primaryType="nt:unstructured"
                jcr:title="Basic"
                sling:resourceType="granite/ui/components/foundation/section">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items
                            jcr:primaryType="nt:unstructured"
                            sling:resourceSuperType="turquoise/components/structure/common/customdialog/customrichtext/item">
                            <hideYellowIcon
                                jcr:primaryType="nt:unstructured"
                                sling:orderBefore="[customrichtext]"
                                sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                allowBulkEdit="{Boolean}true"
                                name="./hideYellowIcon"
                                text="Hide Yellow Icon"
                                value="true"/>
                            <bgcolor
                                jcr:primaryType="nt:unstructured"
                                sling:orderBefore="[customrichtext]"
                                sling:resourceType="usgb/widgets/colorpicker"
                                classicPaletteType="{Boolean}false"
                                fieldLabel="Background Color"
                                freestylePaletteType="{Boolean}true"
                                name="./bgColor">
                                <mappings jcr:primaryType="nt:unstructured">
                                    <color-primary-green
                                        jcr:primaryType="nt:unstructured"
                                        name="color-primary-green"
                                        value="#009b3a"/>
                                    <color-primary-yellow
                                        jcr:primaryType="nt:unstructured"
                                        name="color-primary-yellow"
                                        value="#fed100"/>
                                    <color-secondary-red
                                        jcr:primaryType="nt:unstructured"
                                        name="color-secondary-red"
                                        value="#c20051"/>
                                    <color-secondary-blue
                                        jcr:primaryType="nt:unstructured"
                                        name="color-secondary-blue"
                                        value="#00a5dd"/>
                                    <color-secondary-brown
                                        jcr:primaryType="nt:unstructured"
                                        name="color-secondary-brown"
                                        value="#845023"/>
                                    <color-secondary-purple
                                        jcr:primaryType="nt:unstructured"
                                        name="color-secondary-purple"
                                        value="#292182"/>
                                    <color-secondary-orange
                                        jcr:primaryType="nt:unstructured"
                                        name="color-secondary-orange"
                                        value="#e85314"/>
                                    <color-secondary-gold
                                        jcr:primaryType="nt:unstructured"
                                        name="color-secondary-gold"
                                        value="#70772a"/>
                                    <color-secondary-grey
                                        jcr:primaryType="nt:unstructured"
                                        name="color-secondary-grey"
                                        value="#4c4d4f"/>
                                    <color-secondary-teal
                                        jcr:primaryType="nt:unstructured"
                                        name="color-secondary-teal"
                                        value="#006870"/>
                                    <color-white
                                        jcr:primaryType="nt:unstructured"
                                        name="color-white"
                                        value="#FFFFFF"/>
                                    <color-light-grey
                                        jcr:primaryType="nt:unstructured"
                                        name="color-light-grey"
                                        value="#F6F6F6"/>
                                    <color-grey
                                        jcr:primaryType="nt:unstructured"
                                        name="color-grey"
                                        value="#DDDDDD"/>
                                    <color-dark-grey
                                        jcr:primaryType="nt:unstructured"
                                        name="color-dark-grey"
                                        value="#5F6062"/>
                                    <color-deep-dark-grey
                                        jcr:primaryType="nt:unstructured"
                                        name="color-deep-dark-grey"
                                        value="#353535"/>
                                    <color-black
                                        jcr:primaryType="nt:unstructured"
                                        name="color-black"
                                        value="#000000"/>
                                </mappings>
                            </bgcolor>
                            <title
                                jcr:primaryType="nt:unstructured"
                                sling:orderBefore="[customrichtext]"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldLabel="Title"
                                name="./title"
                                useFixedInlineToolbar="{Boolean}true"/>
                            <customrichtext
                                jcr:primaryType="nt:unstructured"
                                fieldLabel="description"
                                name="./description"/>
                            <contentAlign
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/select"
                                fieldLabel="Desktop Content Alignment"
                                name="./contentAlignment">
                                <datasource
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="turquoise/components/structure/common/datasources/destopalignment"/>
                            </contentAlign>
                            <buttonStyle
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/select"
                                fieldLabel="Button Style"
                                name="./buttonStyle">
                                <datasource
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="turquoise/components/structure/common/datasources/linkstyle"/>
                            </buttonStyle>
                            <link
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                fieldLabel="Link Path"
                                name="./link"
                                rootPath="/content/usgboral"/>
                            <category
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldLabel="Category"
                                name="./category"
                                useFixedInlineToolbar="{Boolean}true"/>
                            <opacity
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/select"
                                fieldLabel="Opacity"
                                name="./opacity">
                                <datasource
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="turquoise/components/structure/common/datasources/opacity"/>
                            </opacity>
                            <imgPath/>
                            <buttonText/>
                            <hiddenCenter/>
                        </items>
                    </column>
                </items>
            </basic>
            <mobile
                jcr:primaryType="nt:unstructured"
                jcr:title="Mobile"
                sling:resourceType="granite/ui/components/foundation/section">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items
                            jcr:primaryType="nt:unstructured"
                            sling:resourceSuperType="turquoise/components/structure/common/customdialog/customrichtext/item">
                            <customrichtext
                                jcr:primaryType="nt:unstructured"
                                fieldLabel="Description"
                                name="./mblDescription"/>
                            <title
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldLabel="Title"
                                name="./mblTitle"
                                useFixedInlineToolbar="{Boolean}true"/>
                            <imgPath/>
                        </items>
                    </column>
                </items>
            </mobile>
        </items>
    </content>
</jcr:root>
