<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Grid Control (3 Column)"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/tabs"
            type="nav"/>
        <items jcr:primaryType="nt:unstructured">
            <desktop
                jcr:primaryType="nt:unstructured"
                jcr:title="Desktop"
                sling:resourceType="granite/ui/components/foundation/section">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <column1width
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/select"
                                fieldLabel="Column 1 Width"
                                name="./dcolumn1width">
                                <datasource
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="turquoise/components/structure/common/datasources/colwidth"/>
                            </column1width>
                            <c1hidepadding
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                name="./dc1hidepadding"
                                text="Hide Column 1 Padding"
                                value="true"/>
                            <column1animation
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/select"
                                fieldLabel="Column 1 Animation"
                                name="./dcolumn1animation">
                                <datasource
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="turquoise/components/structure/common/datasources/animationtime"/>
                            </column1animation>
                            <column2width
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/select"
                                fieldLabel="Column 2 Width"
                                name="./dcolumn2width">
                                <datasource
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="turquoise/components/structure/common/datasources/colwidth"/>
                            </column2width>
                            <c2hidepadding
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                name="./dc2hidepadding"
                                text="Hide Column 2 Padding"
                                value="true"/>
                            <column2animation
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/select"
                                fieldLabel="Column 2 Animation "
                                name="./dcolumn2animation">
                                <datasource
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="turquoise/components/structure/common/datasources/animationtime"/>
                            </column2animation>
                            <column3width
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/select"
                                fieldLabel="Column 3 Width"
                                name="./dcolumn3width">
                                <datasource
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="turquoise/components/structure/common/datasources/colwidth"/>
                            </column3width>
                            <c3hidepadding
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                name="./dc3hidepadding"
                                text="Hide Column 3 Padding"
                                value="true"/>
                            <column3animation
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/select"
                                fieldLabel="Column 3 Animation"
                                name="./dcolumn3animation">
                                <datasource
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="turquoise/components/structure/common/datasources/animationtime"/>
                            </column3animation>
                            <offset
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/select"
                                fieldLabel="Offset"
                                name="./doffset">
                                <datasource
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="turquoise/components/structure/common/datasources/offset"/>
                            </offset>
                            <margintop
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/select"
                                fieldLabel="Margin (Top)"
                                name="./dmargintop">
                                <datasource
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="turquoise/components/structure/common/datasources/margin"/>
                            </margintop>
                            <marginbottom
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/select"
                                fieldLabel="Margin (Bottom)"
                                name="./dmarginbottom">
                                <datasource
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="turquoise/components/structure/common/datasources/margin"/>
                            </marginbottom>
                        </items>
                    </column>
                </items>
            </desktop>
            <tablet
                jcr:primaryType="nt:unstructured"
                jcr:title="Tablet"
                sling:resourceType="granite/ui/components/foundation/section">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <column1width
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/select"
                                fieldLabel="Column 1 Width"
                                name="./tcolumn1width">
                                <datasource
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="turquoise/components/structure/common/datasources/colwidth"/>
                            </column1width>
                            <c1hidepadding
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                name="./tc1hidepadding"
                                text="Hide Column 1 Padding"
                                value="true"/>
                            <column2width
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/select"
                                fieldLabel="Column 2 Width"
                                name="./tcolumn2width">
                                <datasource
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="turquoise/components/structure/common/datasources/colwidth"/>
                            </column2width>
                            <c2hidepadding
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                name="./tc2hidepadding"
                                text="Hide Column 2 Padding"
                                value="true"/>
                            <column3width
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/select"
                                fieldLabel="Column 3 Width"
                                name="./tcolumn3width">
                                <datasource
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="turquoise/components/structure/common/datasources/colwidth"/>
                            </column3width>
                            <c3hidepadding
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                name="./tc3hidepadding"
                                text="Hide Column 3 Padding"
                                value="true"/>
                            <offset
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/select"
                                fieldLabel="Offset"
                                name="./toffset">
                                <datasource
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="turquoise/components/structure/common/datasources/offset"/>
                            </offset>
                            <margintop
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/select"
                                fieldLabel="Margin (Top)"
                                name="./tmargintop">
                                <datasource
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="turquoise/components/structure/common/datasources/margin"/>
                            </margintop>
                            <marginbottom
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/select"
                                fieldLabel="Margin (Bottom)"
                                name="./tmarginbottom">
                                <datasource
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="turquoise/components/structure/common/datasources/margin"/>
                            </marginbottom>
                        </items>
                    </column>
                </items>
            </tablet>
            <mobile
                jcr:primaryType="nt:unstructured"
                jcr:title="Mobile"
                sling:resourceType="granite/ui/components/foundation/section">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <column1width
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/select"
                                fieldLabel="Column 1 Width"
                                name="./mcolumn1width">
                                <datasource
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="turquoise/components/structure/common/datasources/colwidth"/>
                            </column1width>
                            <c1hidepadding
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                name="./mc1hidepadding"
                                text="Hide Column 1 Padding"
                                value="true"/>
                            <column2width
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/select"
                                fieldLabel="Column 2 Width"
                                name="./mcolumn2width">
                                <datasource
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="turquoise/components/structure/common/datasources/colwidth"/>
                            </column2width>
                            <c2hidepadding
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                name="./mc2hidepadding"
                                text="Hide Column 2 Padding"
                                value="true"/>
                            <column3width
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/select"
                                fieldLabel="Column 3 Width"
                                name="./mcolumn3width">
                                <datasource
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="turquoise/components/structure/common/datasources/colwidth"/>
                            </column3width>
                            <c3hidepadding
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                name="./mc3hidepadding"
                                text="Hide Column 3 Padding"
                                value="true"/>
                            <offset
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/select"
                                fieldLabel="Offset"
                                name="./moffset">
                                <datasource
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="turquoise/components/structure/common/datasources/offset"/>
                            </offset>
                            <margintop
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/select"
                                fieldLabel="Margin (Top)"
                                name="./mmargintop">
                                <datasource
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="turquoise/components/structure/common/datasources/margin"/>
                            </margintop>
                            <marginbottom
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/select"
                                fieldLabel="Margin (Bottom)"
                                name="./mmarginbottom">
                                <datasource
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="turquoise/components/structure/common/datasources/margin"/>
                            </marginbottom>
                        </items>
                    </column>
                </items>
            </mobile>
            <customcss
                jcr:primaryType="nt:unstructured"
                jcr:title="Custom CSS"
                sling:resourceType="granite/ui/components/foundation/section">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <class
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldLabel="Class ID"
                                name="./classid"/>
                            <description
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textarea"
                                fieldLabel="CSS"
                                name="./cssoverwrite"/>
                        </items>
                    </column>
                </items>
            </customcss>
        </items>
    </content>
</jcr:root>
