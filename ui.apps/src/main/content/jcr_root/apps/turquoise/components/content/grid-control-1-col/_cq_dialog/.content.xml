<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Grid Control (1 Column)"
    sling:resourceType="cq/gui/components/authoring/dialog"
    extraClientlibs="[cq.authoring.dialog.grid-control-1-col]">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/tabs"
            type="nav"/>
        <items jcr:primaryType="nt:unstructured">
            <desktop
                jcr:primaryType="nt:unstructured"
                jcr:title="Desktop"
                sling:resourceType="granite/ui/components/foundation/section">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <columnwidth
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/select"
                                fieldLabel="Column Width"
                                name="./dcolumnwidth">
                                <datasource
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="turquoise/components/structure/common/datasources/colwidth"/>
                            </columnwidth>
                            <hidepadding
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                allowBulkEdit="{Boolean}true"
                                name="./dhidepadding"
                                text="Hide Column Padding"
                                value="true"/>
                            <column1animation
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/select"
                                fieldLabel="Column 1 Animation"
                                name="./dcolumn1animation">
                                <datasource
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="turquoise/components/structure/common/datasources/animationtime"/>
                            </column1animation>
                            <offset
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/select"
                                fieldLabel="Offset"
                                name="./doffset">
                                <datasource
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="turquoise/components/structure/common/datasources/offset"/>
                            </offset>
                            <margintop
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/select"
                                fieldLabel="Margin (Top)"
                                name="./dmargintop">
                                <datasource
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="turquoise/components/structure/common/datasources/margin"/>
                            </margintop>
                            <marginbottom
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/select"
                                fieldLabel="Margin (Bottom)"
                                name="./dmarginbottom">
                                <datasource
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="turquoise/components/structure/common/datasources/margin"/>
                            </marginbottom>
                        </items>
                    </column>
                </items>
            </desktop>
            <tablet
                jcr:primaryType="nt:unstructured"
                jcr:title="Tablet"
                sling:resourceType="granite/ui/components/foundation/section">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <columnwidth
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/select"
                                fieldLabel="Column Width"
                                name="./tcolumnwidth">
                                <datasource
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="turquoise/components/structure/common/datasources/colwidth"/>
                            </columnwidth>
                            <hidepadding
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                name="./thidepadding"
                                text="Hide Column Padding"
                                value="true"/>
                            <offset
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/select"
                                fieldLabel="Offset"
                                name="./toffset">
                                <datasource
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="turquoise/components/structure/common/datasources/offset"/>
                            </offset>
                            <margintop
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/select"
                                fieldLabel="Margin (Top)"
                                name="./tmargintop">
                                <datasource
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="turquoise/components/structure/common/datasources/margin"/>
                            </margintop>
                            <marginbottom
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/select"
                                fieldLabel="Margin (Bottom)"
                                name="./tmarginbottom">
                                <datasource
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="turquoise/components/structure/common/datasources/margin"/>
                            </marginbottom>
                        </items>
                    </column>
                </items>
            </tablet>
            <mobile
                jcr:primaryType="nt:unstructured"
                jcr:title="Mobile"
                sling:resourceType="granite/ui/components/foundation/section">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <columnwidth
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/select"
                                fieldLabel="Column Width"
                                name="./mcolumnwidth">
                                <datasource
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="turquoise/components/structure/common/datasources/colwidth"/>
                            </columnwidth>
                            <hidepadding
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                name="./mhidepadding"
                                text="Hide Column Padding"
                                value="true"/>
                            <offset
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/select"
                                fieldLabel="Offset"
                                name="./moffset">
                                <datasource
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="turquoise/components/structure/common/datasources/offset"/>
                            </offset>
                            <margintop
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/select"
                                fieldLabel="Margin (Top)"
                                name="./mmargintop">
                                <datasource
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="turquoise/components/structure/common/datasources/margin"/>
                            </margintop>
                            <marginbottom
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/select"
                                fieldLabel="Margin (Bottom)"
                                name="./mmarginbottom">
                                <datasource
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="turquoise/components/structure/common/datasources/margin"/>
                            </marginbottom>
                        </items>
                    </column>
                </items>
            </mobile>
            <customcss
                jcr:primaryType="nt:unstructured"
                jcr:title="Custom CSS"
                sling:resourceType="granite/ui/components/foundation/section">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <class
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldLabel="Class ID"
                                name="./classid"/>
                            <description
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textarea"
                                fieldLabel="CSS"
                                name="./cssoverwrite"/>
                        </items>
                    </column>
                </items>
            </customcss>
        </items>
    </content>
</jcr:root>
