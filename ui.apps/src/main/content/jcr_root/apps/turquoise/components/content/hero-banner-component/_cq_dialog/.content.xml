<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Hero Banner Component"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/tabs"
            type="nav"/>
        <items jcr:primaryType="nt:unstructured">
            <basic
                jcr:primaryType="nt:unstructured"
                jcr:title="Basic"
                sling:resourceType="granite/ui/components/foundation/section">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items
                            jcr:primaryType="nt:unstructured"
                            sling:resourceSuperType="turquoise/components/structure/common/customdialog/customrichtext/item">
                            <bgcolor
                                jcr:primaryType="nt:unstructured"
                                sling:orderBefore="[customrichtext]"
                                sling:resourceType="usgb/widgets/colorpicker"
                                classicPaletteType="{Boolean}false"
                                fieldLabel="Background Color"
                                freestylePaletteType="{Boolean}true"
                                name="./bgColor">
                                <mappings jcr:primaryType="nt:unstructured">
                                    <color-primary-green
                                        jcr:primaryType="nt:unstructured"
                                        name="color-primary-green"
                                        value="#009b3a"/>
                                    <color-primary-yellow
                                        jcr:primaryType="nt:unstructured"
                                        name="color-primary-yellow"
                                        value="#fed100"/>
                                    <color-secondary-red
                                        jcr:primaryType="nt:unstructured"
                                        name="color-secondary-red"
                                        value="#c20051"/>
                                    <color-secondary-blue
                                        jcr:primaryType="nt:unstructured"
                                        name="color-secondary-blue"
                                        value="#00a5dd"/>
                                    <color-secondary-brown
                                        jcr:primaryType="nt:unstructured"
                                        name="color-secondary-brown"
                                        value="#845023"/>
                                    <color-secondary-purple
                                        jcr:primaryType="nt:unstructured"
                                        name="color-secondary-purple"
                                        value="#292182"/>
                                    <color-secondary-orange
                                        jcr:primaryType="nt:unstructured"
                                        name="color-secondary-orange"
                                        value="#e85314"/>
                                    <color-secondary-gold
                                        jcr:primaryType="nt:unstructured"
                                        name="color-secondary-gold"
                                        value="#70772a"/>
                                    <color-secondary-grey
                                        jcr:primaryType="nt:unstructured"
                                        name="color-secondary-grey"
                                        value="#4c4d4f"/>
                                    <color-secondary-teal
                                        jcr:primaryType="nt:unstructured"
                                        name="color-secondary-teal"
                                        value="#006870"/>
                                    <color-white
                                        jcr:primaryType="nt:unstructured"
                                        name="color-white"
                                        value="#FFFFFF"/>
                                    <color-light-grey
                                        jcr:primaryType="nt:unstructured"
                                        name="color-light-grey"
                                        value="#F6F6F6"/>
                                    <color-grey
                                        jcr:primaryType="nt:unstructured"
                                        name="color-grey"
                                        value="#DDDDDD"/>
                                    <color-dark-grey
                                        jcr:primaryType="nt:unstructured"
                                        name="color-dark-grey"
                                        value="#5F6062"/>
                                    <color-deep-dark-grey
                                        jcr:primaryType="nt:unstructured"
                                        name="color-deep-dark-grey"
                                        value="#353535"/>
                                    <color-black
                                        jcr:primaryType="nt:unstructured"
                                        name="color-black"
                                        value="#000000"/>
                                </mappings>
                            </bgcolor>
                            <assetType
                                granite:class="cq-dialog-dropdown-showhide"
                                jcr:primaryType="nt:unstructured"
                                sling:orderBefore="[customrichtext]"
                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                fieldLabel="Asset Type"
                                name="./assetType">
                                <granite:data
                                    jcr:primaryType="nt:unstructured"
                                    cq-dialog-dropdown-showhide-target=".asset-showhide-target"/>
                                <items jcr:primaryType="nt:unstructured">
                                    <_x0031_
                                        jcr:primaryType="nt:unstructured"
                                        text="Image"
                                        value="image"/>
                                    <_x0032_
                                        jcr:primaryType="nt:unstructured"
                                        text="Video"
                                        value="assetVideo"/>
                                </items>
                            </assetType>
                            <videoField
                                granite:class="assetVideo asset-showhide-target"
                                jcr:primaryType="nt:unstructured"
                                sling:orderBefore="[customrichtext]"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <granite:data
                                    jcr:primaryType="nt:unstructured"
                                    showhidetargetvalue="assetVideo"/>
                                <items jcr:primaryType="nt:unstructured">
                                    <video/>
                                </items>
                            </videoField>
                            <imageField
                                granite:class="image asset-showhide-target"
                                jcr:primaryType="nt:unstructured"
                                sling:orderBefore="[customrichtext]"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <granite:data
                                    jcr:primaryType="nt:unstructured"
                                    showhidetargetvalue="image"/>
                                <items jcr:primaryType="nt:unstructured">
                                    <imgPath/>
                                </items>
                            </imageField>
                            <title
                                jcr:primaryType="nt:unstructured"
                                sling:orderBefore="[customrichtext]"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldLabel="Title"
                                name="./title"
                                useFixedInlineToolbar="{Boolean}true"/>
                            <customrichtext
                                jcr:primaryType="nt:unstructured"
                                fieldLabel="description"
                                name="./description"/>
                            <contentAlign
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/select"
                                fieldLabel="Desktop Content Alignment"
                                name="./contentAlignment">
                                <datasource
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="turquoise/components/structure/common/datasources/destopalignment"/>
                            </contentAlign>
                            <hideYellowIcon
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                allowBulkEdit="{Boolean}true"
                                name="./hideYellowIcon"
                                text="Hide Yellow Icon"
                                value="true"/>
                            <opacity
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/select"
                                fieldLabel="Opacity"
                                name="./opacity">
                                <datasource
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="turquoise/components/structure/common/datasources/opacity"/>
                            </opacity>
                            <hiddenImage/>
                        </items>
                    </column>
                </items>
            </basic>
            <mobile
                jcr:primaryType="nt:unstructured"
                jcr:title="Mobile"
                sling:resourceType="granite/ui/components/foundation/section">
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <mblImgPath/>
                        </items>
                    </column>
                </items>
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
            </mobile>
        </items>
    </content>
</jcr:root>
